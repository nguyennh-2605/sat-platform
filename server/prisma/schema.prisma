generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  email               String               @unique
  password            String?
  createdAt           DateTime             @default(now())
  name                String?
  role                Role                 @default(STUDENT)
  avatar              String?
  taughtClasses       Class[]              @relation("TeacherClasses")
  errorLogs           ErrorLog[]
  homeworkSubmissions HomeworkSubmission[]
  submissions         Submission[]
  createdTests        Test[]
  studyingClasses     Class[]              @relation("StudentClasses")
}

model Class {
  id          String       @id @default(uuid())
  name        String
  createdAt   DateTime     @default(now())
  teacherId   Int
  assignments Assignment[]
  teacher     User         @relation("TeacherClasses", fields: [teacherId], references: [id])
  classTests  ClassTest[]
  students    User[]       @relation("StudentClasses")
}

model Assignment {
  id          String               @id @default(uuid())
  title       String
  content     String?
  fileUrl     String?
  deadline    DateTime?
  createdAt   DateTime             @default(now())
  classId     String
  class       Class                @relation(fields: [classId], references: [id], onDelete: Cascade)
  submissions HomeworkSubmission[]
}

model HomeworkSubmission {
  id           String     @id @default(uuid())
  fileUrl      String?
  textResponse String?
  score        Float?
  feedback     String?
  submittedAt  DateTime   @default(now())
  status       String     @default("SUBMITTED")
  studentId    Int
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student      User       @relation(fields: [studentId], references: [id])

  @@unique([studentId, assignmentId])
}

model Test {
  id          Int          @id @default(autoincrement())
  description String?
  duration    Int          @default(64)
  title       String
  mode        TestMode     @default(PRACTICE)
  authorId    Int?
  category    TestCategory @default(PRACTICE)
  isPublic    Boolean      @default(false)
  subject     TestSubject  @default(RW)
  createdAt   DateTime     @default(now())
  testDate    String?
  classTests  ClassTest[]
  sections    Section[]
  submissions Submission[]
  author      User?        @relation(fields: [authorId], references: [id])
}

model ClassTest {
  id         Int       @id @default(autoincrement())
  classId    String
  testId     Int
  assignedAt DateTime  @default(now())
  dueDate    DateTime?
  isHidden   Boolean   @default(false)
  class      Class     @relation(fields: [classId], references: [id], onDelete: Cascade)
  test       Test      @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@unique([classId, testId])
}

model Section {
  id        Int        @id @default(autoincrement())
  testId    Int
  name      String
  order     Int
  duration  Int
  questions Question[]
  test      Test       @relation(fields: [testId], references: [id])
}

model Question {
  id            Int      @id @default(autoincrement())
  sectionId     Int
  type          QuestionType  @default(MCQ)
  choices       Json
  correctAnswer String
  blocks        Json
  questionText  String
  explanation   String?
  order         Int      @default(0)
  answers       Answer[]
  section       Section  @relation(fields: [sectionId], references: [id])
}

model Submission {
  id                   Int              @id @default(autoincrement())
  userId               Int
  testId               Int
  endTime              DateTime?
  score                Int?
  violationCount       Int              @default(0)
  startedAt            DateTime         @default(now())
  currentQuestionIndex Int              @default(0)
  savedAnswers         Json?
  timeRemaining        Int?
  status               SubmissionStatus @default(DOING)
  answers              Answer[]
  test                 Test             @relation(fields: [testId], references: [id])
  user                 User             @relation(fields: [userId], references: [id])
}

model Answer {
  id             Int        @id @default(autoincrement())
  submissionId   Int
  questionId     Int
  selectedChoice String?
  isCorrect      Boolean    @default(false)
  question       Question   @relation(fields: [questionId], references: [id])
  submission     Submission @relation(fields: [submissionId], references: [id])
}

model ErrorLog {
  id            String   @id @default(uuid())
  source        String?
  category      String?
  userAnswer    String?
  correctAnswer String?
  whyWrong      String?
  whyRight      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  TEACHER
  STUDENT
  ADMIN
}

enum TestMode {
  PRACTICE
  EXAM
}

enum TestCategory {
  REAL
  CLASS
  PRACTICE
}

enum TestSubject {
  RW
  MATH
}

enum SubmissionStatus {
  DOING
  COMPLETED
}

enum QuestionType {
  MCQ      // Trắc nghiệm
  SPR      // Tự luận điền số (Grid-in)
}
